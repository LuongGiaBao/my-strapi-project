{
  "kind": "collectionType",
  "collectionName": "promotions",
  "info": {
    "singularName": "promotion",
    "pluralName": "promotions",
    "displayName": "Promotion"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "promotionName": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true
    },
    "discountType": {
      "type": "enumeration",
      "enum": [
        "percentage",
        "fixed"
      ],
      "required": true
    },
    "discountValue": {
      "type": "decimal"
    },
    "startDate": {
      "type": "datetime"
    },
    "endDate": {
      "type": "datetime"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "ACTIVE",
        "INACTIVE",
        "EXPIRED"
      ],
      "required": true
    },
    "ticket_prices": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::ticket-price.ticket-price",
      "mappedBy": "promotion"
    }
  }
}
